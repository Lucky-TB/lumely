{
  "expo": {
    "name": "lumely",
    "slug": "lumely",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lumely",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lumely.health"
    },
    "android": {
      "package": "com.lumely.health",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Lumely to access your camera to scan your health."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Lumely to access your photo library to select images for health scanning."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
